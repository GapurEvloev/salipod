section.section.section--video
    .video
        a(data-fancybox href="#modalVideo").video__link.video__link--desktop
            button.video__button(type="button" aria-label="Запустить видео")
                img.video__button-icon(src="static/images/content/video/play.svg", alt="Запустить видео")
            <video width="100%" height="auto" preload="auto" autoplay="true" loop="true" muted="muted" id="previewVideo">
                <source src="static/video/preview.mp4" type="video/mp4">
                <source src="static/video/preview.webm" type="video/webm">
                <source src="static/video/preview.ogv" type="video/ogg">
                |Your browser doesn't support HTML5 video tag.
            </video>
        <video width="100%" height="auto" controls  id="modalVideo" style='display:none'>
            <source id="modalVideoSource" src="static/video/salipod.mp4" type="video/mp4">
            <source src="static/video/salipod.webm" type="video/webm">
            <source src="static/video/salipod.ogv" type="video/ogg">
            |Your browser doesn't support HTML5 video tag.
        </video>
        <video width="100%" height="auto" controls  id="mobileVideo" style='display:none'>
            <source id="modalVideoSource" src="static/video/mobile_video.mp4" type="video/mp4">
            <source src="static/video/mobile_video.webm" type="video/webm">
            <source src="static/video/mobile_video.ogv" type="video/ogg">
            |Your browser doesn't support HTML5 video tag.
        </video>