.section--contest-rules
    visibility hidden

.contest-rules
    z-index 1
    // background-image linear-gradient(to bottom, #d2c4c8, #d5c7cc)
    position relative
    padding-bottom 6rem

    &__wrap
        display flex
        flex-direction column
    
        & > *
            &:not(:last-child)
                margin-bottom 5.3rem

    &__col
        border-radius 20px
        display flex
        flex-direction column
        position relative
        background #d5c7cb
        margin 3px

        &:after
            content ''
            position absolute
            top 0
            right 0
            left 0
            bottom 0
            margin -3px
            background-image: linear-gradient(to right, #c69233, #b88830, #a97f2d, #9c752b, #8e6c28, #906c2e, #926d34, #946d39, #a57748, #b78258, #c78d68, #d89879);
            z-index -1
            border-radius 20px
    
    @media(min-width $grid-xxl)
        padding-bottom 11.5rem

        &__wrap
            margin 0 -6.5rem   
            flex-direction row
            justify-content center

            & > * 
                flex 0 0 calc(50% - 6.5rem)   
                &:not(:last-child)
                    margin-right 3%
                    margin-bottom 0
    
    @media(min-width 1700px)
        &__wrap
            margin 0 -12.5rem
            & > * 
                flex 0 0 calc(50% - 6.5rem)   
                &:not(:last-child)
                    margin-right 12rem

.rules
    padding 3.7rem 9rem 0 8rem
    position relative

    & > *
        &:not(:last-child)
            margin-bottom 5rem
        
    @media(min-width $grid-xxl)
        padding-left 9rem
        padding-right 19rem

        & > *
            &:not(:last-child)
                margin-bottom 6rem
        
    #rules-line 
        fill:none;
        stroke:#FFFFFF;
        stroke-width:3;
        stroke-miterlimit:10;
        position: absolute;
        left: 0;
        top: 0;
        width 13.4rem

        @media(max-width $grid-xl-max)
            width 12.5rem

        @media(max-width $grid-sm-max)
            width 12.8rem

    &__mask
        z-index 1
        position: absolute;
        height: 400px
        left: 7rem;
        top: 9rem;
        width 13.4rem
        display none

        @media(max-width $grid-xl-max)
            height: 380px
            left 6rem
        @media(max-width $grid-sm-max)
            left 5.8rem   
            height: 250px
        @media(max-width $grid-xs-max)
            left 6rem
            height: 140px

    
@keyframes pulsing1{
    0% {
        transform scale(1)
        // transition transform .2s linear
    }
    50% {
        transform: scale(1.1)
        // transition transform .2s linear
    }
    100% {
        transform scale(1)
        // transition transform .2s linear
    }
}
@keyframes pulsing2{
    0% {
        transform scale(1)
        // transition transform .2s linear
    }
    50% {
        transform: scale(1.1)
        // transition transform .2s linear
    }
    100% {
        transform scale(1)
        // transition transform .2s linear
    }
}
@keyframes pulsing3{
    0% {
        transform scale(1)
        // transition transform .2s linear
    }
    50% {
        transform: scale(1.1)
        // transition transform .2s linear
    }
    100% {
        transform scale(1)
        // transition transform .2s linear
    }
}


.rule
    display flex
    align-items center
    position relative
    z-index 2

    & > *
        &:not(:last-child)
            margin-right 3rem

    &:nth-child(1)
        .rule__img
            animation: pulsing1 .6s linear 2s 1 normal
    &:nth-child(2)
        .rule__img
            animation: pulsing2 .6s linear 4s 1 normal    
    &:nth-child(3)
        .rule__img
            animation: pulsing3 .6s linear 7s 1 normal    

    &__img
        min-width 9.4rem 
        height 11.3rem
        transition all linear .5s
        // animation: pulsing1 1s linear 2s 1 normal
    
    &__descr
        font-size 2.8rem
        text-transform uppercase
        font-weight 700
        line-height 1.2
        padding-top 1rem
        flex auto

        &-icon
            height 2.7rem
            display block
        
    @media(min-width $grid-xl)
        // 

.reg-form
    padding 5.8rem 5.2rem 4.8rem

    &__group
        width 100%
        display flex
        flex-direction column
        align-items center
        position relative

        &:not(:last-child)
            margin-bottom 3.2rem
    
    &__input
        width 100%
        font-size 2.8rem    
        color $input-color
        text-align center
        padding 1.5rem
        border-radius .6rem 
        appearance none
        border 0
        box-shadow none
        transition all .2s linear

        &:focus
            +placeholder()
                transition all .2s linear
                color lighten($input-color, 50%)
        
        &.reg-form__input--file
            position absolute
            opacity 0
            top 0
            left 0
            width 1px
            height 1px
            padding 0
        
    &__input--submit,
    &__label
        color $white
        width auto
        display inline-block
        margin 0 auto
        border-color transparent
        font-size 2.6rem
        padding 1.8rem 3.7rem
        border-radius 8rem
        cursor pointer
        // --file

    &__rules
        color $black
        font-size 1.6rem   
        text-align center 

        &-link
            color $black
            text-decoration underline
    
        
    @media(min-width $grid-xl)
        padding 6rem 6.8rem 6rem
        justify-content space-between
        
.reg-form
    &:not(.access)
        .reg-form__input--submit
            opacity 0.5