.rule
    display flex
    align-items center
    position relative
    z-index 2

    & > *
        &:not(:last-child)
            margin-right 3rem 

    &__img
        min-width 38px
        height 45px
        transition all linear .5s
        // animation: pulsing1 1s linear 2s 1 normal
        
        @media(min-width $grid-sm)
            min-width 94px
            height 113px

        @media(min-width $grid-lg)
            min-width 5.83vw
            height 6.82vw
    
    &__descr
        font-size 2.8rem
        text-transform uppercase
        font-weight 700
        line-height 1.2
        padding-top 1rem
        flex auto
        max-width 100%

        &-icon
            height 2.7rem
            display block
        
        @media(min-width $grid-lg)
            font-size 1.46vw

            &-icon
                height 1.61vw
                width 8.54vw

.reg-form
    padding 5.8rem 5.2rem 4.8rem

    &__group
        width 100%
        display flex
        flex-direction column
        align-items center
        position relative
        transition all  linear .2s

        &:not(:last-child)
            margin-bottom 3.2rem
    
    &__input
        width 100%
        font-size 2.8rem    
        color $input-color
        text-align center
        padding 1.5rem
        border-radius .6rem 
        appearance none
        border 0
        box-shadow none
        transition all .2s linear
        font-family "Gotham Pro"

        &:focus
            +placeholder()
                transition all .2s linear
                color lighten($input-color, 50%)
        
        &.reg-form__input--file
            position absolute
            opacity 0
            top 0
            left 0
            width 1px
            height 1px
            padding 0
        
    &__input--submit,
    &__label
        color $white
        width auto
        display inline-block
        margin 0 auto
        border-color transparent
        font-size 2.6rem
        padding 2rem 3.7rem 1.6rem
        border-radius 8rem
        cursor pointer
        font-family "Gotham Pro"
    
    &__input--submit[disabled]
        opacity 0.5
        &:hover
            transform none
    
    &__file-return:not(:empty)
        margin 1rem 0 -2rem
        text-align center 
        font-size 1.7rem
        transition all linear .2s

    &__rules
        color $black
        font-size 1.6rem   
        text-align center 
        display block
        margin 0 auto

        &-link
            color $black
            text-decoration underline
    
        
    @media(min-width $grid-lg)
        padding 3.65vw 3.54vw 3.65vw
        justify-content space-between

        &__group
            &:not(:last-child)
                margin-bottom 1.67vw

        &__input
            font-size 1.46vw
            padding 1.2vw
            border-radius 0.31vw

        &__input--submit,
        &__label
            font-size 1.35vw
            padding 1.3vw 1.93vw 1.15vw
            border-radius 4.17vw

        &__file-return:not(:empty)
            margin 0.52vw 0 -1.04vw
            font-size 0.89vw

        &__rules
            font-size 0.83vw