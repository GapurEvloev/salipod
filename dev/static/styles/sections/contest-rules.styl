.section--contest-rules
    z-index 1
    background-image linear-gradient(to bottom, #d5c7cb)

.contest-rules
    &__wrap
        display flex
        flex-direction column
    
        & > *
            &:not(:last-child)
                margin-bottom 5.3rem

    &__col
        border-radius 20px
        display flex
        flex-direction column
        position relative
        background #d5c7cb
        margin 3px

        &:after
            content ''
            position absolute
            top 0
            right 0
            left 0
            bottom 0
            margin -3px
            background-image: linear-gradient(to right, #c69233, #b88830, #a97f2d, #9c752b, #8e6c28, #906c2e, #926d34, #946d39, #a57748, #b78258, #c78d68, #d89879);
            z-index -1
            border-radius 20px
    
.rules
    padding 3.7rem 9rem 5.4rem 8rem

    & > *
        &:not(:last-child)
            margin-bottom 5rem

.rule
    display flex
    align-items center

    & > *
        &:not(:last-child)
            margin-right 2rem

    &__img
        width 9.4rem 
        height 11.3rem
    
    &__descr
        font-size 2.8rem
        text-transform uppercase
        font-weight 700
        line-height 1.2
        padding-top 1rem

        &-icon
            height 2.7rem
            display block

.reg-form
    padding 5.8rem 5.2rem 4.8rem

    &__group
        width 100%
        display flex
        flex-direction column
        align-items center

        &:not(:last-child)
            margin-bottom 3.2rem
    
    &__input
        width 100%
        font-size 2.8rem    
        color $input-color
        text-align center
        padding 1.5rem
        border-radius .6rem 
        appearance none
        border 0
        box-shadow none
        transition all .2s linear

        &:focus
            +placeholder()
                transition all .2s linear
                color lighten($input-color, 50%)
        
    &__input--submit,
    &__label
        color $white
        width auto
        display inline-block
        margin 0 auto
        border-color transparent
        font-size 2.6rem
        padding 1.8rem 3.7rem
        border-radius 8rem
        // --file

    &__rules
        color $black
        font-size 1.6rem   
        text-align center 

        &-link
            color $black
            text-decoration underline