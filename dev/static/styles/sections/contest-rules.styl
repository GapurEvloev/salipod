.section--contest-rules
    // visibility hidden

.contest-rules
    z-index 1
    position relative
    padding-bottom 6rem

    &__wrap
        display flex
        flex-direction column
    
        & > *
            &:not(:last-child)
                margin-bottom 5.3rem

    &__col
        border-radius 20px
        display flex
        flex-direction column
        position relative
        background #d5c7cb
        margin 3px

        &:after
            content ''
            position absolute
            top 0
            right 0
            left 0
            bottom 0
            margin -3px
            background-image: linear-gradient(to right, #c69233, #b88830, #a97f2d, #9c752b, #8e6c28, #906c2e, #926d34, #946d39, #a57748, #b78258, #c78d68, #d89879);
            z-index -1
            border-radius 20px
    
    @media(min-width $grid-lg)
        padding-bottom 6.1vw

        &__wrap
            margin 0 -6vw   
            flex-direction row
            justify-content center

            & > *
                &:not(:last-child)
                    margin-bottom 0

        &__col
            flex 0 0 calc(50% - 3.39vw)
            max-width: calc(50% - 3.39vw)
            margin-right: 6.61vw
            margin-bottom: 2.76vw

            &:last-child
                margin-right 0
                margin-bottom 0

.rules
    padding 3.7rem 6rem 05rem 8rem
    position relative

    .rule
        margin-bottom 5rem
        &:last-child
            margin-bottom 0
        
    @media(min-width $grid-lg)
        padding 2.3vw 7.09vw 2.6vw 4.17vw

        .rule
            margin-bottom 3.13vw
            &:last-child
                margin-bottom 0


    
