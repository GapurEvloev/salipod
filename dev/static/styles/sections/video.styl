.section--video
    // 
.video
    &__link
        position relative
        display block
        width 100%
        height auto
        cursor pointer
        height 100%

        video 
            border 0

        picture 
            min-height 100%

        &:hover
            .video__button-icon
                transform scale(1.05)

    &__button
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        appearance none
        cursor pointer
        background-color transparent
        padding 0
        margin 0
        border 0
        z-index 1
        overflow visible
    
        &-icon
            width 19.5rem
            height 19.5rem
            transition transform .2s linear

    &__media
        width 100%
        height 100%

    @media(min-width $grid-lg)
        width 76.04vw
        margin 0 auto
        padding 0 20px
        box-sizing: border-box

.mfp-wrap
    .mfp-content
        @media(min-width $grid-lg)
            max-width 80%

