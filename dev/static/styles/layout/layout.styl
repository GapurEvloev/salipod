html
	font-size 10px
	height 100%

	@media(max-width $grid-sm-max)
		font-size 7px
	@media(max-width $grid-xs-max)
		font-size 4px

body
	font-size 1rem
	font-family "Gotham Pro"
	height 100%
	margin 0
	-moz-osx-font-smoothing: grayscale
	-webkit-font-smoothing: antialiased

h1, h2, h3, h4, h5, h6 
	margin 0

ul, li
	list-style-type none
	margin 0
	padding 0

a
	text-decoration none

p
	margin 0

audio,
canvas,
iframe,
img,
svg,
video,
textarea
	vertical-align middle

textarea 
	resize none

section
	position relative

input,
select,
button
	outline none

*, *:before, *:after
	box-sizing border-box

.wrapper
	background-image: linear-gradient(to bottom, #d2c4c9, #d2c4c9, #d2c4c9, #d2c4c9, #d2c4c9, #e6c5cd, #e6c5cd, #e7c6cd, #e3c7cd, #dfc9cd, #dacacd, #d6cbcd);
	
