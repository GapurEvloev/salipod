.section__title
    font-size 4.9rem
    color $title-color
    font-weight 700
    text-transform uppercase
    text-align center
    padding-bottom 2rem
    position relative

    span
        position absolute
        bottom 0
        left 0
        width 100%
        height .3rem
        background-image: url(../images/general/line_1.svg)
        background-repeat no-repeat
        background-size 101%
        background-color #b08330
        display block
    
    @media(min-width $grid-lg)
        font-size 2.87vw
