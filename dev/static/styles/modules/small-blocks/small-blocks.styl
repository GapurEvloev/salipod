.section__title
    font-size 5.5rem
    color $title-color
    font-weight 700
    text-transform uppercase
    text-align center
    padding-bottom 2rem
    position relative

    &:after
        content ''
        position absolute
        bottom 0
        left 0
        width 100%
        height .3rem
        background-image: linear-gradient(to right, #c95c79, #c05a61, #b45a4d, #a45c3c, #925d2f, #926232, #916635, #916b38, #a37647, #b58057, #c78b67, #d89778)