.header
    background-image: url(../images/general/mobile-intro-bg.jpg)
    background-size auto 101% 
    padding 3.6rem 0 0
    overflow hidden
    
    &__logos
        position relative
        z-index 2
        margin 0 3.3rem 0 2rem
        display flex
        justify-content space-between
    
    &__logo
        &-img
            height 6rem
            width auto

    @media(min-width $grid-lg)
        padding 1.88vw 0 1vw
        margin-bottom 1vw

        &__logos
            margin 0 3.6vw 0 2rem
        
        &__logo
            display inline-block
            &--womansday
                height 1.93vw
                width 11.15vw
                

            &--salipod
                margin-left: auto
                
                // height 2.45vw
                width 14.15vw

            &-img
                width 100%
                height 100%
    
